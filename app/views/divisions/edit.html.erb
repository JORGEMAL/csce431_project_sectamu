<%= link_to("<< Back to List", divisions_path, :class => "back-link") %>

<div>
    <h2>Update Division</h2>
    <%= form_for(@division) do |f| %>
        <%= error_messages_for(f.object) %>
        <table>
            <tr>
                <td>Name</td>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><%= f.text_area(:description) %></td>
            </tr>
        </table>
        
        <div>
            <%= f.submit("Update Division") %>
        </div>
    <% end %>
</div>
