<div>
    <h2>Divisions</h2>
   
    <table class="table table-condensed table-striped table-bordered">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
        <% @divisions.each do |division| %>
        <tr>
            <td><%= division.id %></td>
            <td><%= division.name %></td>
            <td><%= division.description %></td>
            <td style="text-align:center"><%= image_tag(division.image, :class => "thumb_size") %></td>
            <td>
                <%= link_to("Show", division_path(division.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Edit", edit_division_path(division.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Delete", delete_division_path(division.id), :class => "btn btn-danger btn-xs") %>
            </td>
        </tr>
        <% end %>
    </table>
     <%= link_to("Add new division", new_division_path, :class => "btn btn-sm btn-success") %>
     <%= link_to("Back to menu", access_menu_path, :class => "btn btn-sm btn-warning")%>
</div>