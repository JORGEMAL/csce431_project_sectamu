<%= link_to("<< Back to List", sponsors_path, :class => "back-link") %>

<div>
    <h2>Create Sponsor</h2>
    <%= form_for(@sponsor) do |f| %>
        <%= error_messages_for(f.object) %>
        <table>
            <tr>
                <td>Name</td>
                <td><%= f.text_field(:name) %></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><%= f.text_area(:description) %></td>
            </tr>
            <tr>
                <td>Type</td>
                <td><%= f.text_field(:spn_type) %></td>
            </tr>
            <tr>
                <td>Link to SEC</td>
                <td><%= f.text_field(:link_to_sec) %></td>
            </tr>
            <tr>
                <td>Link to Sponsor</td>
                <td><%= f.text_field(:link_to_sponsor) %></td>
            </tr>
        </table>
        
        <div>
            <%= f.submit("Create Sponsor") %>
        </div>
    <% end %>
</div>
