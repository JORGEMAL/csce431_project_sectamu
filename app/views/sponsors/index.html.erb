<div>
    <h2>Sponsors</h2>
    <table class="table table-condensed table-striped table-bordered">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Logo</th>
            <th>Link to SEC</th>
            <th>Link to Sponsor</th>
            <th></th>
        </tr>
        <% @sponsors.each do |sponsor| %>
        <tr>
            <td><%= sponsor.id %></td>
            <td><%= sponsor.name %></td>
            <td><%= sponsor.description %></td>
            <td><%= sponsor.spn_type %></td>
            <td><%= sponsor.link_to_sec %></td>
            <td><%= sponsor.link_to_sponsor %></td>
            <td style="text-align:center"><%= image_tag(sponsor.logo, :class => "thumb_size") %></td>
            <td>
                <%= link_to("Show", sponsor_path(sponsor.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Edit", edit_sponsor_path(sponsor.id), :class => "btn btn-primary btn-xs") %>
                <%= link_to("Delete", delete_sponsor_path(sponsor.id), :class => "btn btn-danger btn-xs") %>
            </td>
        </tr>
        <% end %>
    </table>
    <%= link_to("Add new sponsor", new_sponsor_path, :class => "btn btn-sm btn-success") %>
    <%= link_to("Back to menu", access_menu_path, :class => "btn btn-sm btn-warning")%>
</div>