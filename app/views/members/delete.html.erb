
<div>
    <h2>Delete Member</h2>
    
    <%= form_for(@member, :method => "delete") do |f| %>
        <p class="divCenter">Are you sure you want to permanently delete this member?</p>
        <table class="tableCenter">
            <tr>
                <td class="columnLabel boldText">Name:</td>
                <td><%= @member.name %></td>
            </tr>
            <tr>
                <td class="columnLabel boldText">Email:</td>
                <td><%= @member.email %></td>
            </tr>
            <tr>
                <td class="columnLabel boldText">Major:</td>
                <td><%= @member.major %></td>
            </tr>
            <tr>
                <td class="columnLabel boldText">Graduation Year:</td>
                <td><%= @member.grad_year %></td>
            </tr>
        </table>
        <div class="divCenter">
            <%= f.submit("Delete Member", :class => "btn btn-danger btn-sm") %>
            <%= link_to("Back to List", members_path, :class => "btn btn-warning btn-sm") %>
        </div>
    <% end %>
</div>
